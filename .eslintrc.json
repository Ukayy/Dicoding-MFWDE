{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["google"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "require-jsdoc": 0,
    "indent": ["error", 2],
    "no-unused-vars": "warn",
    "space-before-function-paren": "off",
    "max-len": ["warn", 100],
    "new-cap": "warn"
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack.common.js"
      }
    }
  }
}
